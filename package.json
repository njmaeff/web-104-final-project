{
  "name": "root",
  "version": "0.0.1",
  "description": "web 104 app",
  "private": true,
  "workspaces": [
    "src/*",
    "private"
  ],
  "scripts": {
    "g:dev": "cd $INIT_CWD && browser-sync --no-ghost-mode -w",
    "g:dev-polypane": "cd $INIT_CWD && browser-sync --no-ghost-mode -w --browser 'polypane'",
    "lint": "tidy -errors -quiet ./root/**/*.html",
    "format": "prettier --write root",
    "test": "prettier --check root && yarn lint && yarn validate root",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "root/**/*.(html|js|css)": [
      "yarn format",
      "yarn lint",
      "yarn validate"
    ]
  },
  "wallaby": {
    "autoDetect": true,
    "testFramework": {
      "configFile": "./jest.config.wallaby.js"
    }
  }
}
